# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment: 'development' for local, 'production' for Render/Atlas
NODE_ENV=production

# --- Database ---
# MongoDB Atlas connection string (REQUIRED for production)
MONGO_URI_ATLAS=your_mongodb_atlas_connection_string_here

# Local MongoDB connection string (for development only)
MONGO_URI_LOCAL=mongodb://localhost:27017/bims2

# --- Security ---
# JWT Secret Key (REQUIRED - generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# --- Server ---
# Port (Render will set this automatically)
PORT=5000

# --- Chapa Payment Gateway ---
# Get these from your Chapa dashboard
CHAPA_SECRET_KEY=your_chapa_secret_key_here
CHAPA_WEBHOOK_SECRET=your_chapa_webhook_secret_here

# --- URLs ---
# Backend URL (your Render app URL)
BACKEND_URL=https://your-app-name.onrender.com

# Frontend URL (your frontend deployment URL)
FRONTEND_URL=https://your-frontend-url.com
